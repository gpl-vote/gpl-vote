.PHONY: all test clean distclean mostyclean realclean
VPATH=sys:net
OBJ:=unix_main.o

ARLIBS=sys.a net.a cmn.a gcrypt.a

all: gpl-vote
clean:
	make -C sys clean
	make -C net clean
	make -C cmn clean
	make -C gcrypt clean
	make -C test clean
	rm -f *.o
	rm -f gpl-vote ${OBJ}

distclean: clean
	rm -f Makefile confdefs.h config.h config.log config.status
	rm -rf autom4te.cache/
mostlyclean: distclean
realclean: distclean

gpl-vote: ${OBJ} sys.a net.a cmn.a version.o
	${CXX} ${CXXFLAGS} ${LDFLAGS} ${LIBS} $? -o $@

version.o: version.cpp info.sh
	$(CXX) $(CXXFLAGS) -D__INFO__="\"`sh info.sh -n`\"" -c -o $@ $<

%.a: $(ARLIBS:%.a=%/*.cpp) $(ARLIBS:%.a=%/*.h) $(ARLIBS:%.a=%/*.inc) 
	make -C $(@:%.a=%) ../$@

test: $(ARLIBS)
	make -C test

